<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info" id='nav'>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link text-white" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#sign-up-field">Sign Up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#who-tag">Who's coming</a>
                </li>
            </ul>
        </div>
    </nav>
    <img src='./images/matrix.gif' ) id='matrix'>
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="./images/Sz-FrontHouse.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="./images/hedge-facing-backyard.jpg" style="height:100vh" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="./images/house-facing-backyard.jpg" alt="Third slide">
            </div>
        </div>
    </div>
    <div id='landing'>
        <div id='information-background'>
            <p class='event-header'>Hanna's Web Development Networking Event</p>
            <p class='event-details'>Come join us for an afternoon of coding discussion and mutual anxiety relief.</p>
            <p class='event-details'>Saturday, April 20th 3pm-7pm</p>
            <p class='event-details'>745 18th Street, Santa Monica</p>
            <a href="https://www.google.com/maps/dir/UCLA+Extension+Gayley+Center,+Gayley+Avenue,+Los+Angeles,+CA/745+18th+St,+Santa+Monica,+CA+90402/@34.0423278,-118.4816989,14z/data=!3m1!4b1!4m14!4m13!1m5!1m1!1s0x80c2bc823d1c6fd5:0xf1d173f312b5d1b!2m2!1d-118.4463684!2d34.0595924!1m5!1m1!1s0x80c2a4b21b05559b:0x3067a87b3a1e672!2m2!1d-118.4915555!2d34.0356565!3e0"
                target="_blank">
                <p id="address-link">Get Directions</p>
            </a>
        </div>
    </div>
    <div id='sign-up-field'>
        <h1>Sign up</h1>
        <form>
            <div class="form-group">
                <input type="text" class="form-control" id="first-name" placeholder="First Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="last-name" placeholder="Last Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="item" placeholder="What food/drink will you bring?">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="fun-question" placeholder="Fave hobbies?">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="childhood-question" placeholder="Favorite game as a child?">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">Transplant/Native?</span>
                </div>
                <select class="form-control origin-question" id="exampleFormControlSelect1">
                    <option></option>
                    <option>Native</option>
                    <option>Transplant</option>
                </select>
            </div>

            <button type="submit" id='submit' class="btn btn-info">Sign up!</button>
            <!-- The actual snackbar -->
            <div id="snackbar">Thank you!</div>
        </form>
        <p id='error-message' class='text-danger' style='display:none'>Please fill out all fields</p>
    </div>

    <div id="who-tag"></div>

